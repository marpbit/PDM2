    print('Eu gosto de $n!');
  }
  
//Funções
 main()
{ 
  soma(2,3);
  print('O valor da soma é ${soma2(2,3)}');
 }
soma(a,b){ //entra como dynamic
    print(a+b);
}
int soma2(a,b){
  return (a+b);
}
void soma3(a,b){
  print(a+b);
}

//Classes
class Aluno{
  String? nome;
  double? nota;
 //pode ser nulo, por isso com a ?
  
//construtor 
Aluno();
}

class Aluno2{
  String nome;
  double nota;
//não pode ser nulo, por isso sem a ?
//Construtor com inicialização direta
Aluno2(this.nome, this.nota);
}

class Aluno3{
  String nome;
  double nota;
//construtor com inicialização direta NÃO POSICIONAL
Aluno3({required this.nome, required this.nota}); //esse aqui tem chaves
}

main(){
  //Exemplo de Uso Aluno
  var a1 = new Aluno();
  a1.nome = 'Rodrigo';
  a1.nota = 10.0;
  print('O aluno ${a1.nome} está com a nota ${a1.nota}');
  
  //Exemplo de Uso Aluno2
  var a2 = Aluno2('José', 8.5);
  print ('O aluno ${a2.nome} está com a nota ${a2.nota}');
  
  //Exemplo de Uso Aluno3
  var a3 = Aluno3(nota:7.0,nome:'Luis'); //não posicional
  print ('O aluno ${a3.nome} está com a nota ${a3.nota}');
  
}

