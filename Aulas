  print(roda);
   
  int idade = 18;
  print(idade);
  
//   idade = 4.5;
//   print(idade);
  
  final ano_atual = DateTime.now().year;
  print(ano_atual);
  
//   ano_atual = 2023;
  
  const taxa = 0.1;
  double preco = 100;
  print(preco - preco * taxa);
  
  final aluno = 'Pedro';
  var nota = 7;
